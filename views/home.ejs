<%- include('partials/header') %>
<h1>Home</h1>
<p><%= homeStartingContent %></p>
<% posts.forEach( post => { %>

<h2 class="post-title"><a href="posts/<%=post._id %>"><%= post.postTitle %></a></h2>

<% if(post.postContent.length >= 100){ %>
<p><%= post.postContent.substring(0, 99) %> <a href="posts/<%=post._id %>">Read More...</a></p>
<% }else{ %>
<p><%= post.postContent %></p>
<% } %>


<% }); %>

<%- include('partials/footer') %>